@model Team4_Final_Project.Models.ViewModels.SearchViewModel

@{
    ViewData["Title"] = "Transaction Search";
}

<h1>Transaction Search</h1>

<div class="row">
    <div class="col-md-4">
        <form asp-action="DisplaySearchResults" asp-controller="Transaction" method="get">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="SelectedTransactionType" class="control-label"></label>
                <select asp-for="SelectedTransactionType" asp-items="Html.GetEnumSelectList<TransactionType>()" class="form-control">
                    <option selected="selected" value="">All Transaction Types</option>
                </select>
                <span asp-validation-for="SelectedTransactionType" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <input asp-for="Description" class="form-control" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="AmountLower" class="control-label"></label>
                <input asp-for="AmountLower" class="form-control" />
                <span asp-validation-for="AmountLower" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="AmountUpper" class="control-label"></label>
                <input asp-for="AmountUpper" class="form-control" />
                <span asp-validation-for="AmountUpper" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TransactionNumber" class="control-label"></label>
                <input asp-for="TransactionNumber" class="form-control" />
                <span asp-validation-for="TransactionNumber" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label>Custom Date Range:</label>
                <label asp-for="DateLower" class="control-label"></label>
                <input asp-for="DateLower" class="form-control" />
                <span asp-validation-for="DateLower" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DateUpper" class="control-label"></label>
                <input asp-for="DateUpper" class="form-control" />
                <span asp-validation-for="DateUpper" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Search" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>
<div>
    <a asp-action="Index">Back to List</a>
</div>