@model Team4_Final_Project.Models.Dispute

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Dispute</h4>
<hr />
<dl class="row">
    <dt class="col-sm-2">
        @Html.DisplayNameFor(model => model.Transaction.Account.AppUser.UserName)
    </dt>
    <dd class="col-sm-10">
        @Html.DisplayFor(model => model.Transaction.Account.AppUser.UserName)
    </dd>
    <dt class="col-sm-2">
        @Html.DisplayNameFor(model => model.Note)
    </dt>
    <dd class="col-sm-10">
        @Html.DisplayFor(model => model.Note)
    </dd>
    <dt class="col-sm-2">
        @Html.DisplayNameFor(model => model.Status)
    </dt>
    <dd class="col-sm-10">
        @Html.DisplayFor(model => model.Status)
    </dd>
    <dt class="col-sm-2">
        @Html.DisplayNameFor(model => model.Transaction.Amount)
    </dt>
    <dd class="col-sm-10">
        @Html.DisplayFor(model => model.Transaction.Amount)
    </dd>
    
    
</dl>
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Note" />
            <input type="hidden" asp-for="DisputeID" />
            
            <div class="form-group">
                <label asp-for="AdminNote" class="control-label"></label>
                <input asp-for="AdminNote" class="form-control" />
                <span asp-validation-for="AdminNote" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Status" class="control-label"></label>
                <label class="radio">@Html.RadioButtonFor(model => model.Status, DisputeStatus.Accepted) Accepted</label>
                <label class="radio">@Html.RadioButtonFor(model => model.Status, DisputeStatus.Adjusted) Adjusted</label>
                <label class="radio">@Html.RadioButtonFor(model => model.Status, DisputeStatus.Rejected) Rejected</label>
            </div>
            <div class="form-group">
                <label asp-for="CorrectAmount" class="control-label"></label>
                <input asp-for="CorrectAmount" class="form-control" />
                <span asp-validation-for="CorrectAmount" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
