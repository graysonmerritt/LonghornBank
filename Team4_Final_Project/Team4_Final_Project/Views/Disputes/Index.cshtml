@model IEnumerable<Team4_Final_Project.Models.Dispute>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>


<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Note)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.AdminNote)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Status)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CorrectAmount)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Note)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.AdminNote)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Status)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CorrectAmount)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.DisputeID">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.DisputeID">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.DisputeID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
